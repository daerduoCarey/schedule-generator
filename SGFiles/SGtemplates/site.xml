<HTMLPAGE tag=code>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	
<head>
	<title>TestSite</title>
		<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1" />
		<script type="text/javascript" src="tabber-minimized.js"></script>
		<link rel="stylesheet" href="style.css" type="text/css" ></link> 
		<script type="text/javascript">
			if (top.location!= self.location) 
			{
				top.location = self.location.href
			}
		</script>
</head>
	
<body>
	<table id="container" border="2" align="center" width="800" style="border-collapse: collapse; min-height:100%" >
	<tbody>
	
		<tr style="height:100px">
		<td style="text-align: left; vertical-align: top;">
			Header
		</td>
		</tr>
	
		<tr style="height:100px">
		<td style="text-align: left; vertical-align: top;">
		<div class="tabber">
		{pagecontent}
		</div>
		</td>
	    </tr>
	    
		<tr style="height:50px">
		<td style="text-align: left; vertical-align: top;">
			Footer
		</td>
		</tr>	
	</tbody>
</body>
</html>
	
</HTMLPAGE tag=code>

<TAB tag=code>
	<div class="tabbertab" title={tabtitle}>
		{tabcontent}
	</div>
</TAB tag=code>

<IFRAME tag=code>
	<iframe src={framesrc} width=100% height=100%>
  		<p>##IFrame_error##</p>
	</iframe>
</IFRAME tag=code>

<LOGIN tag=code>

	<h1>Login Page</h1>
	<table border="0">
		<tr>
		<td>##userName_Login##</td>
		<form method="POST" action="{actionlogin}">
		<td> <input type="text" name="username" /> </td>
		</tr>
		<tr>
		<td>##password_Login##</td>
		<td><input type="password" name="password" /></td>
		</tr>
		<td><input type="submit"/></form></td>
		
		<td>
		<form method="POST" action="{actionlogin}">
		<input type="hidden" name="username" value="guest"/> 
		<input type="hidden" name="password" value="guest"/>
		<input type="submit" value="##Submit_Guest##"/></form>
		</td>
		
		</tr>
	</table>
	{messagelogin}

</LOGIN tag=code>
