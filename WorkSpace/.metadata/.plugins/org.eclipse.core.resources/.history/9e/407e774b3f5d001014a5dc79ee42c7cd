package htmlInterfaces;

import htmlInterfaces.HTMLTablable.TableHead;
import htmlInterfaces.HTMLTablable.TableInput;

import java.lang.annotation.Annotation;
import java.util.Vector;

public class HTMLInterfaceTool 
{
	/**
	 * Checks if the HTMLTablable is well implemented in the given class
	 * @param obj
	 * @return
	 */
	static public boolean checkHTMLInterface(Class<? extends HTMLTablable> cl)
	{
		Vector<Annotation> classAnnotations= AnnotationTool.FetchClassAnnotation(cl,TableHead.class);
		if ((classAnnotations!=null) && (classAnnotations.size()==1))
		{
			int numberOfinputs=TableHead.class.cast(classAnnotations.get(1)).numberOfInputs();
			Vector<Annotation> methodAnnotations= AnnotationTool.FetchClassAnnotation(cl,TableInput.class);
			if ((methodAnnotations!=null)&& (methodAnnotations.size()==numberOfinputs))
			{
				return true;
			}
		}
		return false;
	}
}
